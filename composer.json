{
    "name": "impress-org/give-paystack",
    "private": true,
    "description": "Paystack payment gateway integration for GiveWP",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "yoast/phpunit-polyfills": "^4.0",
        "phpunit/phpunit": "^9.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors --stop-on-failure",
        "lint:php": "./vendor/bin/phpcs -v -s --colors",
        "lint:php:fix": "./vendor/bin/phpcbf -v --colors",
        "post-install-cmd": [
            "@install-codestandards"
        ],
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ]
    },
    "autoload": {
        "psr-4": {
            "GivePaystack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GivePaystack\\Tests\\": "tests/"
        }
    },
    "config": {
        "vendor-dir": "vendor",
        "platform": {
            "php": "7.4.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        },
        "optimize-autoloader": true,
        "classmap-authoritative": false
    }
}
